@article{HigginsonCostantini2002,
  title = {Accuracy of Prognosis Estimates by Four Palliative Care Teams: A Prospective Cohort Study},
  shorttitle = {Accuracy of Prognosis Estimates by Four Palliative Care Teams},
  author = {Higginson, Irene J and Costantini, Massimo},
  year = {2002},
