  author = {Chen, G. and Feng, J. and Zhou, C. and Wu, Y. -L. and Liu, X. -Q. and Wang, C. and Zhang, S. and Wang, J. and Zhou, S. and Ren, S. and Lu, S. and Zhang, L. and Hu, C. -P. and Hu, C. and Luo, Y. and Chen, L. and Ye, M. and Huang, J. and Zhi, X. and Zhang, Y. and Xiu, Q. and Ma, J. and Zhang, L. and You, C.},
